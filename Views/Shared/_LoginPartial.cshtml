@using Microsoft.AspNetCore.Identity
@inject SignInManager<Artista> SignInManager
@inject UserManager<Artista> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    Artista user = await UserManager.FindByIdAsync(UserManager.GetUserId(User));
    string nome = user.Nome;
    
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @nome!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
